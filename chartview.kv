#:kivy 1.8.0

<ChartView>:
    padding: [30,30]
    orientation: 'vertical'
    BoxLayout:
    	size_hint: (1.0,0.1)
    	orientation: 'horizontal'
    TestGraph:
        size_hint: (1.0, 0.6)
        rcid: 'testGraph'
    Button:
    	size_hint: (0.3,0.1)
    	text: 'Add 1000 data points'
    	on_release: root.add_test_data()
    Label:
    	size_hint: (0.1,0.1)
        text: str(root.dataPoints)

<TestGraph>:
    id: graph
    xlabel: 'Time'
    ylabel: 'Things'
    y_grid_label: True
    x_grid_label: True
    padding: 5
    x_grid: True
    y_grid: True
    xmin: 0
    xmax: 1000
    ymin: -1
    ymax: 1

    
